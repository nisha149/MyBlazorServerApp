    }

    /* MOBILE */
    @@media (max-width: 768px) {
        .topbar

    {
        flex-direction: column;
        align-items: flex-start;
        text-align: left;
        gap: 12px;
        padding: 15px;
    }

    .topbar-right {
        width: 100%;
