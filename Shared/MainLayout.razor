        border-bottom: 1px solid #2d4b9e;
        display: flex;
        justify-content: flex-end;
    }

    .close-menu {
        background: none;
        border: none;
        color: white;
        font-size: 22px;
        cursor: pointer;
    }

    .nav-links {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .nav-links li a {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            color: white;
            text-decoration: none;
            font-size: 16px;
        }

            .nav-links li a:hover {
                background-color: #2d4b9e;
            }

    .submenu {
        list-style: none;
        padding-left: 30px;
        margin: 5px 0;
    }

        .submenu a {
