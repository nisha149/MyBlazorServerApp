    .nav-link {
        font-size: 1.1rem;
        padding: 0.5rem 1rem;
        color: #1e3a8a;
    }

        .nav-link.active {
            background-color: #e0e2ea;
            border-radius: 4px;
        }

        .nav-link:hover {
            background-color: #f1f3f5;
            text-decoration: none;
        }

