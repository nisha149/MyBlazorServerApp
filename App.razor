<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MyBlazorServerApp.Shared.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MyBlazorServerApp.Shared.MainLayout)">
            <p>Sorry, nothing found at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
